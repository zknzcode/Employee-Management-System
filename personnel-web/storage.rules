rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profil fotoğrafları: herkes yükleyebilir ve okuyabilir
    match /profile-photos/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Diğer tüm dosyalar
    match /{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
  }
}
