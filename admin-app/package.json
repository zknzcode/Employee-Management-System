{
  "name": "top-clean-admin",
  "version": "1.0.0",
  "description": "TOP Clean Service - Admin Panel",
  "main": "electron/main.js",
  "author": {
    "name": "Your Name",
    "email": "your-email@example.com"
  },
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5174 concurrently -k \"vite --port 5174\" \"wait-on http://localhost:5174 && electron .\"",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder --win --x64",
    "lint": "vite lint",
    "send:invite": "node scripts/sendInvite.js"
  },
  "keywords": [],
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.yourcompany.admin",
    "productName": "Admin Panel",
    "copyright": "Copyright Â© 2025 Your Company",
    "directories": {
      "output": "dist-installer",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "Admin-Panel-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Admin Panel",
      "license": "build/license.txt",
      "differentialPackage": false,
      "installerLanguages": ["de", "en"],
      "language": 1031
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase": "^12.7.0",
    "nodemailer": "^7.0.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  }
}
